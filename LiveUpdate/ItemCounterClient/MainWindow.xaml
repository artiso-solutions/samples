<Window x:Class="ItemCounterClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ItemCounterClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="277*"/>
            <ColumnDefinition Width="241*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="StartStopButton" FontSize="50" Content="Start" Grid.Column="1" HorizontalAlignment="Left" Margin="9.667,130,0,0" VerticalAlignment="Top" Width="222" Height="74" Click="StartStopButton_Click"/>
        <Button x:Name="ConnectButton" FontSize="50" Content="Connect" Grid.Column="1" HorizontalAlignment="Left" Margin="9.667,23,0,0" VerticalAlignment="Top" Width="222" Height="74" Click="ConnectButton_Click"/>
        <StackPanel HorizontalAlignment="Left"  VerticalAlignment="Top">
            <TextBlock  Text="Count:" FontSize="64"></TextBlock>
            <TextBlock x:Name="CountTextBlock" Text="0" FontSize="64"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
